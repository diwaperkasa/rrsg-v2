{% extends "layout/main.twig" %}

{% block content %}
	<main>
		<section id="section-dist">
			<div class="container my-4">
				<div class="row justify-content-center">
					<div class="col-md-5">
						<h4 class="mb-4 text-center">Partnership
							<br>
							Subscriptions</h4>
						<p class="text-center">Our preferred partners enjoy complimentary subscription. Fill in the form below to receive a complimentary 1-year subscription to Robb Report Singapore.</p>

						<form class="row g-3">
							<div class="col-12">
								<label for="inputCity" class="form-label">Salutation</label>
								<input type="text" class="form-control rounded-0" id="inputSalutation">
							</div>
							<div class="col-12">
								<label for="inputCity" class="form-label">Fisrt Name</label>
								<input type="text" class="form-control rounded-0" id="inputFisrtName">
							</div>
							<div class="col-12">
								<label for="inputCity" class="form-label">Last Name</label>
								<input type="text" class="form-control rounded-0" id="inputLastName">
							</div>
							<div class="col-12">
								<label for="inputCity" class="form-label">Email</label>
								<input type="email" class="form-control rounded-0" id="inputEmail">
							</div>
							<div class="col-12">
								<label for="inputCity" class="form-label">Mobile</label>
								<input type="text" class="form-control rounded-0" id="inputMobile">
							</div>
							<div class="col-12">
								<label for="inputCity" class="form-label">Delivery</label>
								<input type="text" class="form-control rounded-0" id="inputDelivery">
							</div>
							<div class="col-12">
								<label for="inputCity" class="form-label">Postal Code</label>
								<input type="text" class="form-control rounded-0" id="inputPostalCode">
							</div>
							<div class="col-12">
								<label for="inputCity" class="form-label">Enter Your Unique Code</label>
								<input type="text" class="form-control rounded-0" id="inputUniqcode">
							</div>
							<div class="col-12">
								<a href="" class="text-decoration-underline">Privacy Policy</a>
							</div>
							<div class="col-12 text-center">
								<button type="submit" class="btn btn-dark rounded-0">Submit</button>
							</div>
						</form>
					</div>
				</div>
			</div>
			<div class="container-fluid p-0">
				<div class="bg-secondary bg-opacity-25 p-md-5 py-5 px-md-5">
					<div class="container">
						{{ include('page/component/subscribe.twig') }}
					</div>
				</div>
			</div>
		</section>
	</main>
{% endblock %}