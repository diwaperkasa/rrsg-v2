{% extends "layout/main.twig" %}

{% block css_script %}
	<style>
		.btn.is-underline:hover {
			text-decoration: underline;
		}

		.loader {
			width: 120px;
			height: 20px;
			-webkit-mask: linear-gradient(90deg,#000 70%,#0000 0) 0/20%;
			background: linear-gradient(#000 0 0) 0/0% no-repeat #ddd;
			animation: l4 2s infinite steps(6);
		}

		@keyframes l4 {
			100% {
				background-size: 120%
			}
		}
	</style>
{% endblock %}

{% block content %}
	{% set articles = function('get_category_article') %}
	<main>
		<section id="section-newsfeed">
			<div class="container">
				<div class="row">
					<div class="col-md-4">
						<nav class="nav side-nav flex-column my-4 d-none d-md-block">
							<a class="nav-link" href="/lifestyle">Lifestyle</a>
							<a class="nav-link active" aria-current="page" href="/watches-jewellery">Watches & Jewellery</a>
							<a class="nav-link" href="/gear">Gear</a>
							<a class="nav-link" href="/style">Style</a>
							<a class="nav-link" href="/art-design">Art & Design</a>
							<a class="nav-link" href="/investment">Investment</a>
							<a class="nav-link" href="/robb-spotlight">Robb Spotlight</a>
						</nav>
					</div>
					<div class="col-md-8">
						<div class="my-4">
							{% for article in articles.posts %}
								{% if (loop.index == 1) %}
									<div class="card rounded-0 border-0">
										<div class="img-hover-zoom">
											{{ function('get_the_post_thumbnail', article) }}
										</div>
										<div class="card-body text-center">
											<a href="{{ function('the_permalink', article) }}" class="h3 mb-2"><h5>{{ function('short_title', article) }}</h5></a>
											<!-- <p class="text-secondary mb-2">Audemars Piguet launches a stunning new Royal Oak Concept Flying Tourbillon with famed couturier Tamara Ralph</p> -->
											<span>{{ function('wp_date', 'j F, Y', function('strtotime', article.post_date)) }}</span>
											-
											<span>Alvin Wong</span>
										</div>
									</div>
								{% endif %}
							{% endfor %}
							<div class="row post-listing">
								{% for article in articles.posts %}
									{% if (loop.index > 1) %}
										<div class="col-6">
											<div class="card rounded-0 border-0">
												<div class="img-hover-zoom">
													{{ function('get_the_post_thumbnail', article) }}
												</div>
												<div class="card-body text-center">
													<a href="{{ function('the_permalink', article) }}" class="h3 mb-2"><h5>{{ function('short_title', article) }}</h5></a>
													<div>
														<span>{{ function('wp_date', 'j F, Y', function('strtotime', article.post_date)) }}</span>
														-
														<span>Carol Besler</span>
													</div>
												</div>
											</div>
										</div>
									{% endif %}
								{% endfor %}
							</div>
						</div>
						<div class="text-center">
							<div class="btn is-underline load-more">
								<span>View more stories</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<section id="section-MostPopular">
			<div class="container">
				<div class="mt-5">
					<h2 class="text-center mb-4">Most Popular</h2>
					<div class="owl-carousel latest-carousel owl-theme">
						<div class="item">
							<div class="card rounded-0 border-0">
								<div class="img-hover-zoom">
									<img src="/assets/img/slide3.jpg" class="card-img-top" alt="...">
								</div>
								<div class="card-body text-center">
									<a href="#" class="text-secondary text-sm">Investment
									</a>
									<br>
									<a href="#" class="h6">The five most expensive watches sold at auction in 2023</a>
								</div>
							</div>
						</div>
						<div class="item">
							<div class="card rounded-0 border-0">
								<div class="img-hover-zoom">
									<img src="/assets/img/slide4.jpg" class="card-img-top" alt="...">
								</div>
								<div class="card-body text-center">
									<a href="#" class="text-secondary text-sm">Lifestyle
									</a>
									<br>
									<a href="#" class="h6">Philippe Starck joins Mortlach as creative director</a>
								</div>
							</div>
						</div>
						<div class="item">
							<div class="card rounded-0 border-0">
								<div class="img-hover-zoom">
									<img src="/assets/img/slide5.jpg" class="card-img-top" alt="...">
								</div>
								<div class="card-body text-center">
									<a href="#" class="text-secondary text-sm">Style
									</a>
									<br>
									<a href="#" class="h6">The Gucci Ancora campaign celebrates personal expression</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
{% endblock %}

{% block js_script %}
	<script>
		(function () {
			$('.latest-carousel').owlCarousel({
				loop:true,
				autoplay: true,
				lazyLoad: true,
				margin:16,
				nav:false,
				dots: false,
				center: true,
				items:2,
			});
		})();
	</script
{% endblock %}