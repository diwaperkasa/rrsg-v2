{% extends "layout/main.twig" %}

{% block content %}
	<main>
		<section id="section-hero">
			<div class="container">
				<div class="pb-5">
					<div class="owl-carousel hero-carousel owl-theme">
						{% for slider in banner.posts %}
							<div class="item">
								<div class="card rounded-0 border-0 mb-4">
									<div class="img-hover-zoom img-fluid">
										{{ function('get_the_post_thumbnail', slider) }}
									</div>
									<div class="card-body bg-white shadow-sm text-center mx-md-5 mx-4 p-4">
										<a href="#" class="text-secondary">{{ function('primary_category', slider) }}</a>
										<br>
										<a href="{{ function('the_permalink', slider) }}" target="_self">
											<h5>{{ function('short_title', slider) }}</h5>
										</a>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			<div>
		</section>
		<div id="div-gpt-ad-1698302925146-0" class="ad leaderboard leaderboard-top">
			<script>
				googletag.cmd.push(function() {
					googletag.display('div-gpt-ad-1698302925146-0');
				});
			</script>
		</div>
		<section id="section-latest">
			<div class="container">
				{% set latest_article = function('get_latest_article') %}
				<h2 class="text-center mb-4">LATEST</h2>
				<div class="owl-carousel latest-carousel owl-theme">
					{% for article in latest_article.posts %}
						<div class="item">
							{{ include('page/component/card.twig', {'article': article}) }}
						</div>
					{% endfor %}
				</div>
			</div>
		</section>
		<section id="section-newsfeed">
			<div class="container">
				<div class="mb-2">
					{% set articles = function('get_article', 'watches-jewellery', 3) %}
					<div class="d-flex align-items-center my-3">
						<h2 class="me-4">WATCHES</h2>
						<a href="/watches-jewellery" class="btn btn-secondary rounded-0">READ MORE HERE</a>
					</div>
					<div class="mb-2">
						{% for article in articles.posts %}
							{% set term_list = function('wp_get_post_terms', article.ID, 'writer', {'field': 'all'}) %}
							{% if (loop.index == 1) %}
								{{ include('page/component/card.twig', {'article': article}) }}
							{% endif %}
						{% endfor %}
						<div class="row">
							<div class="col-md-7">
								<div class="row">
									{% for article in articles.posts %}
										{% set term_list = function('wp_get_post_terms', article.ID, 'writer', {'field': 'all'}) %}
										{% if (loop.index > 1) %}
											<div class="col-md-6 col-md-12">
												{{ include('page/component/card.twig', {'article': article}) }}
											</div>
										{% endif %}
									{% endfor %}
								</div>
							</div>
							<div class="col-md-5">
								<div id='div-gpt-ad-3035191-5' class="ad leaderboard leaderboard-vertical">
									<script>
										googletag.cmd.push(function() {
											googletag.display('div-gpt-ad-3035191-5');
										});
									</script>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="mb-2">
					{% set articles = function('get_article', 'style', 3) %}
					<div class="d-flex align-items-center my-3">
						<h2 class="me-4">STYLE</h2>
						<a href="/style" class="btn btn-secondary rounded-0">READ MORE HERE</a>
					</div>
					<div class="mb-2">
						{% for article in articles.posts %}
							{% set term_list = function('wp_get_post_terms', article.ID, 'writer', {'field': 'all'}) %}
							{% if (loop.index == 1) %}
								{{ include('page/component/card.twig', {'article': article}) }}
							{% endif %}
						{% endfor %}
						<div class="row">
							{% for article in articles.posts %}
								{% set term_list = function('wp_get_post_terms', article.ID, 'writer', {'field': 'all'}) %}
								{% if (loop.index > 1) %}
									<div class="col-md-6">
										{{ include('page/component/card.twig', {'article': article}) }}
									</div>
								{% endif %}
							{% endfor %}
						</div>
					</div>
				</div>
				<div id="div-gpt-ad-1698303160858-0" class="ad leaderboard leaderboard-mid">
					<script>
						googletag.cmd.push(function() {
							googletag.display('div-gpt-ad-1698303160858-0');
						});
					</script>
				</div>
				<div class="mb-2">
					{% set articles = function('get_article', 'gear', 3) %}
					<div class="d-flex align-items-center my-3">
						<h2 class="me-4">GEAR</h2>
						<a href="/gear" class="btn btn-secondary rounded-0">READ MORE HERE</a>
					</div>
					<div class="mb-2">
						{% for article in articles.posts %}
							{% set term_list = function('wp_get_post_terms', article.ID, 'writer', {'field': 'all'}) %}
							{% if (loop.index == 1) %}
								{{ include('page/component/card.twig', {'article': article}) }}
							{% endif %}
						{% endfor %}
						<div class="row">
							{% for article in articles.posts %}
								{% set term_list = function('wp_get_post_terms', article.ID, 'writer', {'field': 'all'}) %}
								{% if (loop.index > 1) %}
									<div class="col-md-6">
										{{ include('page/component/card.twig', {'article': article}) }}
									</div>
								{% endif %}
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</section>
		<section id="section-subscribe" class="mt-4">
			<div class="container-fluid p-0">
				<div class="container">
					<div class="row">
						<div class="col-md-6">
							<h4 class="mb-4">December 2023</h4>
							<p>We close the year with our much anticipated Ultimate Gift Guide. Pamper yourself and your loved ones, and celebrate a well-lived year with a specially curated list of the most extraordinary accoutrements and experiences.</p>
							<p class="text-muted">Subscribe and receive a copy of Robb Report Singapore at your doorstep each month.</p>
							<div class="mb-3">
								<select class="form-control rounded-0" aria-label="Default select example">
									<option value="1">Single Issue</option>
									<option value="2">Annual Print Subscription (Local)</option>
									<option value="3">Annual Print Subscription (International)</option>
									<option value="4">Digital Subscription</option>
								</select>
							</div>
						</div>
						<div class="col-md-6 text-md-end">
							<h4 class="mb-4">Terms & Conditions</h4>
							<p>Standard conditions on all purchase or subscriptions.
								                Subscriptions or sold goods are 
								                non-refundable from the time of payment.
								                We are not liable for postal and other delays 
								                in delivery.
								                Special offers are subject to specific terms and conditions if applicable.
								                For cheque payments, overseas subscriptions or other queries, please email:
								                subscription@imv.com.sg</p>
							<p>For a full list of our stockists,
								<a href="/distribution" class="text-decoration-underline">click here</a>.</p>
						</div>
					</div>
				</div>
				<div class="bg-secondary bg-opacity-25 p-md-5 py-5 px-md-5">
					<div class="">
						<h4>Subscribe</h4>
						<p>Sign up for our newsletters to have the latest stories delivered straight to your inbox every week.</p>
						<form class="row g-3 js-cm-form" action="https://www.createsend.com/t/subscribeerror?description=" method="post" data-id="2BE4EF332AA2E32596E38B640E905619BBD07B9582DFCEF2C3320268A8A1765EC6E42D293E296DFAEC8C759489404F89320FDF0D30472D73C5C20D543611A62A">
							<div class="col-md-4">
								<div class="form-floating mb-3">
									<input name="cm-f-jyaijr" type="text" class="form-control rounded-0" id="firstName" placeholder="First Name" required>
									<label for="firstName">First Name</label>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-floating mb-3">
									<input name="cm-f-jyaijy"type="text" class="form-control rounded-0" id="lastName" placeholder="Last Name">
									<label for="lastName">Last Name</label>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-floating mb-3">
									<input name="cm-yhquuh-yhquuh" type="email" class="form-control rounded-0 js-cm-email-input" id="email" placeholder="Email address" required>
									<label for="email">Email address</label>
								</div>
							</div>
							<div class="col-12 text-center">
								<button type="submit" class="btn btn-lg btn-dark rounded-0">Subscribe</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</section>
	</main>
{% endblock %}

{% block js_script %}
	<script type="text/javascript">
		$('.hero-carousel').owlCarousel({
			loop:true,
			autoplay:true,
			margin:10,
			nav:false,
			items:1,
			dots: false,
		})

		$('.latest-carousel').owlCarousel({
			loop:true,
			autoplay: true,
			lazyLoad: true,
			margin:16,
			nav:false,
			dots: false,
			center: true,
			items:2,
		})
	</script>
	<script type="text/javascript" src="https://js.createsend1.com/javascript/copypastesubscribeformlogic.js"></script>
{% endblock %}